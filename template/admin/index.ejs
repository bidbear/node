<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>nodejs</title>
    <link href="./css/bootstrap.min.css" rel="stylesheet">
    <style>
    .panel {
    position: fixed;
    top: 10%;
    right: 0;
    left: 25%;
    bottom: 0;
    border: 1px solid transparent;
    border-radius: 4px;
    -webkit-box-shadow: 0 1px 1px rgba(0,0,0,.05);
    box-shadow: 0 1px 1px rgba(0,0,0,.05);
    background: #ccc;
    opacity: 0.9;
    height: 50%;
    width: 50%;
}
    </style>
  </head>
  <body>
    <div class="container">
            <div class="row">
                    <div class="col-md-4">
                        <div class="list-group">
                            <a href="#" class="list-group-item active"> banners</a>
                            <a href="#" class="list-group-item">新闻</a>                          
                        </div>
                    </div>
                    <div class="col-md-8">
                            <form action="?" method="post">
                                    <div class="form-group">
                                      <label for="exampleInputText">标题</label>
                                      <input type="text" class="form-control"  name="title" id="exampleInputText" placeholder="标题">
                                    </div>
                                    <div class="form-group">
                                      <label for="describe">描述</label>
                                      <input type="text" class="form-control"  name="describe" id="describe" placeholder="描述">
                                    </div>
                                    <button type="submit" class="btn btn-default btn-block">提交</button>
                            </form>
                            <table class="table table-bordered">
                                    <caption>数据列表</caption>
                                    <thead>
                                      <tr>
                                        <th>ID</th>
                                        <th>标题</th>
                                        <th>描述</th>
                                        <th class="text-center">操作</th>                                        
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% for (var i= 0;i<banners.length;i++){%>
                                      <tr>
                                        <td><%=banners[i].Id %></td>
                                        <td><%=banners[i].title %></td>
                                        <td><%=banners[i].description %></td>
                                        <td class="text-center">
                                            <a href = "?act=mod&id=<%=banners[i].Id %>" type="button" class="btn btn-default">修改</a>
                                            <a  href = "?act=del&id=<%=banners[i].Id %>" type="button" onclick="return confirm('你确定要删除么？')" class="btn btn-default">删除</a>
                                        </td>
                                      </tr>
                                     <%}%>
                                    </tbody>
                                  </table>
                                  
                    </div>
            </div>
            <% if (typeof data !="undefined"){%>
                <!-- 修改 -->
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="?" method="post">
                            <div class="form-group">
                            <label for="exampleInputText">标题</label>
                            <input type="text" class="form-control"  name="title" id="exampleInputText" placeholder="标题" value="<%=data.title%>">
                            <input type="hidden" name="data_id" value="<%=data.Id%>">
                          </div>
                            <div class="form-group">
                            <label for="describe">描述</label>
                            <input type="text" class="form-control"  name="describe" id="describe" placeholder="描述" value="<%=data.description%>">
                            </div>
                            <div class="text-center">
                           <button type="submit" class="btn btn-default btn-inline pull-left">修改</button><a href="/admin/" class="btn btn-default btn-inline pull-right">取消</a>
                          </div>
                          </form>
                    </div>
                </div>
                <%}%>
        
    </div>
  
    <script src="https://cdn.bootcss.com/jquery/1.12.4/jquery.min.js"></script>
    <script src="./js/bootstrap.min.js"></script>
  </body>
</html>